<!DOCTYPE html>
<html>
<head>
  <title><%= name %></title>

  <script src="pixiurge-0.1.0.min.js"></script>

</head>
<body>

<script>
//<![CDATA[

// Not HTTPS already? Redirect to HTTPS.
if (window.location.protocol != "https:") {
   window.location.protocol = "https:";
   window.location.reload();
}

  $(function(){
    if(!("WebSocket" in window)) {
      alert("Sorry, your browser does not appear to support WebSockets. Please use the latest version of your browser, and not any version of Opera Mini.");
      return;
    }

    window.<%= name %>_game = new Pixiurge();
    // WSS in the URL means you need to set up secure sockets! See the file "start_script" for details
    var ws = new WebSocket("wss://localhost:3001/");
    <%= name %>_game.setTransport(new Pixiurge.WebsocketTransport(<%= name %>_game, ws));
    var display = new Pixiurge.Display(<%= name %>_game, { container: "#displayarea" });
    <%= name %>_game.setDisplay(display);

    <%= name %>_game.setup();
  });

//]]>
</script>

<div id="displayarea"></div>

</body>
</html>
